<idea-plugin>
    <id>top.criwits.scaleda</id>
    <name>Scaleda</name>
    <version>0.0.1-SNAPSHOT</version>
    <vendor>Hans and Chiro</vendor>

    <description>A scalable FPGA EDA framework for IntelliJ platform.</description>

    <idea-version since-build="221.0"/>

    <depends>com.intellij.properties</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <actions>

    </actions>

    <applicationListeners>
    </applicationListeners>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="top.criwits.scaleda.idea.ScaledaMain"/>
    </extensions>

    <!-- Verilog Support -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Verilog"
                implementationClass="top.criwits.scaleda.idea.verilog.VerilogFileType"
                language="Verilog"
                extensions="v"/>
        <lang.parserDefinition language="Verilog"
                               implementationClass="top.criwits.scaleda.idea.verilog.VerilogParserDefinition"/>
        <lang.ast.factory language="Verilog" implementationClass="top.criwits.scaleda.idea.verilog.VerilogASTFactory"/>
        <lang.syntaxHighlighterFactory language="Verilog"
                                       implementationClass="top.criwits.scaleda.idea.verilog.VerilogSyntaxHighlighterFactory"/>
        <completion.contributor language="Verilog"
                                implementationClass="top.criwits.scaleda.idea.verilog.completion.VerilogCompletionContributor"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.idea.verilog.highlight.VerilogHighlightingAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.idea.verilog.annotation.VerilogReferenceAnnotator"/>
        <lang.commenter language="Verilog"
                        implementationClass="top.criwits.scaleda.idea.verilog.commenter.VerilogCommenter"/>


        <!--        <toolWindow id="Scaleda" secondary="false" anchor="right" icon="/icons/logo.png"-->
        <!--                factoryClass="top.criwits.scaleda.idea.panel.ScaledaToolWindowFactory"/>-->

    </extensions>

    <!-- Settings -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable groupId="build"
                                 bundle="bundles.ScaledaBundle"
                                 key="settings.toolchains"
                                 id="top.criwits.scaleda.idea.settings.toolchains.ToolchainsConfigurable"
                                 instance="top.criwits.scaleda.idea.settings.toolchains.ToolchainsConfigurable" />

    </extensions>

</idea-plugin>