<idea-plugin>
    <id>top.criwits.scaleda</id>
    <name>Scaleda</name>
    <version>0.0.1-SNAPSHOT</version>
    <vendor>Hans and Chiro</vendor>

    <description>A scalable FPGA EDA framework for IntelliJ platform.</description>

    <idea-version since-build="221.0"/>

    <depends>com.intellij.properties</depends>
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <!-- see https://blog.jetbrains.com/platform/2019/06/java-functionality-extracted-as-a-plugin/ -->
    <depends>com.intellij.java</depends>

    <resource-bundle>bundles.ScaledaBundle</resource-bundle>

    <!-- Actions -->
    <actions>
        <action id="top.criwits.scaleda.idea.runner.task.ScaledaRunLastTaskAction"
                class="top.criwits.scaleda.idea.runner.task.ScaledaRunLastTaskAction" text="Run Last Scaleda Task"
                description="Run last Scaleda task"/>
        <action id="top.criwits.scaleda.idea.rvcd.RvcdLaunchAction"
                class="top.criwits.scaleda.idea.rvcd.RvcdLaunchAction" text="Launch Rvcd"
                description="Launch Rvcd if not running"/>
        <action id="top.criwits.scaleda.idea.utils.AssetsInstallManuallyAction"
                class="top.criwits.scaleda.idea.utils.AssetsInstallManuallyAction" text="Install Scaleda Assets"
                description="Manually install Scaleda assets"/>
        <action id="top.criwits.scaleda.idea.rvcd.RvcdGotoWaveAction"
                class="top.criwits.scaleda.idea.rvcd.RvcdGotoWaveAction"
                text="Waveform">
            <add-to-group group-id="EditorPopupMenu.GoTo" anchor="after" relative-to-action="GotoDeclaration"/>
        </action>
        <action id="top.criwits.scaleda.idea.project.NewVerilogFileAction"
                class="top.criwits.scaleda.idea.project.NewVerilogFileAction"
                text="Verilog File" description="Create new Verilog file">
            <add-to-group group-id="NewGroup" anchor="before" relative-to-action="NewFile"/>
        </action>

    </actions>

    <!-- Listeners -->
    <applicationListeners>
    </applicationListeners>

    <extensionPoints>
    </extensionPoints>

    <!-- Startup Activities -->
    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="top.criwits.scaleda.idea.ScaledaMain"/>
    </extensions>

    <!-- Services -->
    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="top.criwits.scaleda.idea.ScaledaMainService"/>
        <projectService serviceImplementation="top.criwits.scaleda.idea.windows.tool.logging.ScaledaLoggingService"/>
        <projectService serviceImplementation="top.criwits.scaleda.idea.rvcd.RvcdService"/>
        <projectService serviceImplementation="top.criwits.scaleda.idea.utils.RpcService"/>
    </extensions>

    <!-- Verilog Support -->
    <extensions defaultExtensionNs="com.intellij">
        <!-- file type support -->
        <fileType
                name="Verilog"
                implementationClass="top.criwits.scaleda.verilog.VerilogFileType"
                language="Verilog"
                extensions="v"/>

        <!-- parser -->
        <lang.parserDefinition language="Verilog"
                               implementationClass="top.criwits.scaleda.verilog.VerilogParserDefinition"/>
        <lang.ast.factory language="Verilog" implementationClass="top.criwits.scaleda.verilog.VerilogASTFactory"/>
        <lang.syntaxHighlighterFactory language="Verilog"
                                       implementationClass="top.criwits.scaleda.verilog.highlight.VerilogSyntaxHighlighterFactory"/>
        <lang.psiStructureViewFactory language="Verilog"
                                      implementationClass="top.criwits.scaleda.verilog.structview.VerilogStructViewFactory"/>
        <lang.braceMatcher language="Verilog"
                           implementationClass="top.criwits.scaleda.verilog.editor.brace.VerilogBraceMatcherProvider"/>
        <completion.contributor language="Verilog"
                                implementationClass="top.criwits.scaleda.verilog.completion.signal.SignalNameCompletionContributor"/>
        <completion.contributor language="Verilog"
                                implementationClass="top.criwits.scaleda.verilog.completion.keywords.VerilogKeywordCompletionContributor"/>
        <completion.contributor language="Verilog"
                                implementationClass="top.criwits.scaleda.verilog.completion.module.ModuleItemOuterReferenceCompletionContributor"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.highlight.VerilogHighlightingAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.instantiation.ModuleInstantiationAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.instantiation.ModulePortConnectionAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.MultiDrivenAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.AmbiguousClockAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.AmbiguousAssignInAlways"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.AssignmentsMixedUse"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.HierarchicalReferenceAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.IncompleteSeqBlockAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.UnmatchedVerilog1995PortAnnotator" />
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.IncompleteConditionAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.OrOperatorInSensitiveList"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.ConditionalStatementLatchAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.CaseStatementLatchAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.WidthConcatAmbiguousAnnotator"/>
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.instantiation.ModuleParameterAssignmentsAnnotator" />
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.instantiation.NamedParameterAssignmentAnnotator" />
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.instantiation.UnresolvedPortConnectionAnnotator" />
        <annotator language="Verilog"
                   implementationClass="top.criwits.scaleda.verilog.annotation.assign.IllegalAssignAnnotator" />
        <documentationProvider implementation="top.criwits.scaleda.verilog.document.VerilogDocumentationProvider"/>
        <lang.commenter language="Verilog"
                        implementationClass="top.criwits.scaleda.verilog.commenter.VerilogCommenter"/>

        <!-- editor -->
        <spellchecker.support language="Verilog"
                              implementationClass="top.criwits.scaleda.verilog.spell.VerilogSpellcheckStrategy"/>
        <enterHandlerDelegate implementation="top.criwits.scaleda.verilog.editor.enter.VerilogEnterAfterBeginHandler"/>
        <enterHandlerDelegate
                implementation="top.criwits.scaleda.verilog.editor.enter.VerilogEnterAfterModuleDefinitionHandler"/>
        <typedHandler implementation="top.criwits.scaleda.verilog.editor.formatter.VerilogTypedHandler"/>
        <lang.foldingBuilder language="Verilog"
                             implementationClass="top.criwits.scaleda.verilog.editor.folding.VerilogFoldingBuilder"/>
        <lang.findUsagesProvider language="Verilog"
                                 implementationClass="top.criwits.scaleda.verilog.references.VerilogFindUsagesProvider"/>
        <lineIndentProvider implementation="top.criwits.scaleda.verilog.editor.formatter.VerilogLineIndentProvider"/>
        <formattingService implementation="top.criwits.scaleda.verilog.editor.formatter.VerilogExternalFormatter"/>
        <lang.formatter language="Verilog"
                        implementationClass="top.criwits.scaleda.verilog.editor.formatter.VerilogFormattingModelBuilder"/>
        <internalFileTemplate name="Verilog Module"/>
        <colorSettingsPage implementation="top.criwits.scaleda.idea.settings.editor.VerilogColorSettingsPage" />

    </extensions>

    <!-- Tcl Support -->
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Tcl"
                implementationClass="top.criwits.scaleda.tcl.TclFileType"
                language="Tcl"
                extensions="tcl"/>
        <lang.parserDefinition language="Tcl"
                               implementationClass="top.criwits.scaleda.tcl.TclParserDefinition"/>
        <!--        <lang.ast.factory language="Tcl" implementationClass="top.criwits.scaleda.tcl.TclASTFactory"/>-->
        <!--        <lang.syntaxHighlighterFactory language="Tcl"-->
        <!--                                       implementationClass="top.criwits.scaleda.tcl.TclSyntaxHighlighterFactory"/>-->
        <lang.commenter language="Tcl"
                        implementationClass="top.criwits.scaleda.tcl.commenter.TclCommenter"/>
    </extensions>

    <!-- Settings -->
    <extensions defaultExtensionNs="com.intellij">
        <langCodeStyleSettingsProvider
                implementation="top.criwits.scaleda.verilog.editor.codeStyle.VerilogCodeStyleSettingsProvider"/>
        <applicationConfigurable groupId="build"
                                 bundle="bundles.ScaledaBundle"
                                 key="settings.generic"
                                 id="top.criwits.scaleda.idea.settings.generic.ScaledaGenericConfigurable"
                                 instance="top.criwits.scaleda.idea.settings.generic.ScaledaGenericConfigurable">
            <configurable groupId="build"
                          bundle="bundles.ScaledaBundle"
                          key="settings.toolchains"
                          id="top.criwits.scaleda.idea.settings.toolchains.ToolchainsConfigurable"
                          instance="top.criwits.scaleda.idea.settings.toolchains.ToolchainsConfigurable"/>
            <configurable groupId="build"
                          bundle="bundles.ScaledaBundle"
                          key="settings.auth.name"
                          id="top.criwits.scaleda.idea.settings.auth.AuthorizationEditor"
                          instance="top.criwits.scaleda.idea.settings.auth.AuthorizationEditor"/>

        </applicationConfigurable>
    </extensions>

    <!-- Module, Project and SDK -->
    <extensions defaultExtensionNs="com.intellij">
        <!--        <sdkType implementation="top.criwits.scaleda.idea.project.ScaledaSDK" />-->
        <moduleType id="SCALEDA_MODULE" implementationClass="top.criwits.scaleda.idea.project.ScaledaModuleType"/>
        <newProjectWizard.language id="scaleda"
                                   implementation="top.criwits.scaleda.idea.project.wizard.ScaledaNewProjectWizard"/>

        <!--        <projectImportProvider implementation="top.criwits.scaleda.idea.project.ScaledaProjectImportProvider" />-->
    </extensions>


    <!-- Scaleda run tasks -->
    <extensions defaultExtensionNs="com.intellij">
        <configurationType implementation="top.criwits.scaleda.idea.runner.configuration.ScaledaRunConfigurationType"/>
        <runConfigurationProducer
                implementation="top.criwits.scaleda.idea.runner.configuration.ScaledaRunConfigurationProducer"/>
    </extensions>

    <!-- Notification group -->
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup displayType="BALLOON"
                           id="Scaleda"
                           bundle="bundles.ScaledaBundle" key="notification.scaleda"/>
    </extensions>

</idea-plugin>